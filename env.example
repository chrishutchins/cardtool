# Supabase Configuration
# Get these values from your Supabase project settings: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Clerk Authentication
# Get these from https://dashboard.clerk.com
# Production keys (used on Vercel)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_xxx
CLERK_SECRET_KEY=sk_live_xxx
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
# For custom domains, set to your Clerk frontend API (e.g., clerk.yourdomain.com)
NEXT_PUBLIC_CLERK_FRONTEND_API=clerk.yourdomain.com

# Development Clerk keys (used locally when set)
# These automatically override the production keys in development mode
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY_DEV=pk_test_xxx
CLERK_SECRET_KEY_DEV=sk_test_xxx

# Development User Override
# When using Clerk Development instance locally but want to use production user data,
# set this to your production Clerk user ID. Only works in development mode.
DEV_USER_ID_OVERRIDE=user_xxx

# Plaid (for account linking)
# Get these from https://dashboard.plaid.com/developers/keys
PLAID_CLIENT_ID=your-client-id
PLAID_SECRET=your-secret
PLAID_ENV=production  # sandbox, development, or production

# Stripe (for membership verification)
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Sentry Error Monitoring
# Get these from https://sentry.io/settings/
NEXT_PUBLIC_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
SENTRY_ORG=your-org
SENTRY_PROJECT=cardtool
SENTRY_AUTH_TOKEN=sntrys_xxx

# Upstash Rate Limiting
# Get these from https://console.upstash.com/
UPSTASH_REDIS_REST_URL=https://xxx.upstash.io
UPSTASH_REDIS_REST_TOKEN=xxx

# Admin Configuration
ADMIN_EMAILS=admin@example.com,admin2@example.com

# Invite Codes (comma-separated, fallback when Stripe check fails)
INVITE_CODES=BETA2024,EARLYACCESS

# SendGrid (for email notifications)
# Get your API key from https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.xxx
FEEDBACK_FROM_EMAIL=noreply@yourdomain.com
FEEDBACK_NOTIFY_EMAIL=your-email@example.com
